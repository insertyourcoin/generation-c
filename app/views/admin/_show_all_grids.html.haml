%h2
  =t "admin.grids"
.list-group
  -@grids.each do |grid|
    .list-group-item
      %h4{class: "list-group-item-heading"}
        =grid[:name]
      %p{class: "list-group-item-text"}
        =grid[:description]
        %span{class: "pull-right"}
          =link_to "#{t "rules.destroy"}", admin_destroy_grid_path(grid[:id]), method: :delete, class: "btn-sm btn-danger"
=will_paginate @grids
:javascript
  $(".pagination a").click(function () {
    event.preventDefault();
    var url = event.toElement.href;
    $("#content").load(url);
  });