.container
  -if !@rule_results.empty?
    .list-group
      -@rule_results.each do |result|
        .list-group-item
          %h4{class: "list-group-item-heading"}
            =result[:name]
          %p{class: "list-group-item-text"}
            =result[:description]
            %span{class: "pull-right"}
              -if result_add_link result
                =link_to "Add to my rules", add_rule_path(result[:id]), class: "btn-sm btn-primary", method: :post, remote: true
              -else
                %span{class: "btn-sm btn-success"}
                  =t "search_results.already"
  -if !@grid_results.empty?
    .list-group
      -@grid_results.each do |result|
        .list-group-item
          %h4{class: "list-group-item-heading"}
            =result[:name]
          %p{class: "list-group-item-text"}
            =result[:description]
            %span{class: "pull-right"}
              -if result_add_link result
                =link_to "Add to my grids", add_grid_path(result[:id]), class: "btn-sm btn-info", method: :post, remote: true
              -else
                %span{class: "btn-sm btn-success"}
                  =t "search_results.already"
  -if @rule_results.empty? && @grid_results.empty?
    .alert.alert-info
      =t "search_results.sorry"