.container
  .h2
    =t "rules.add"
  -if flash[:error]
    .alert.alert-danger
      %button{type: "button", class: "close", data: {dismiss: "alert"}, aria: {hidden: "true"}}
        &times;
      =flash[:error]
  .col-md-4
    =form_for @rule do |f|
      =f.label "#{t "rules.name"}"
      =f.text_field :name, autofocus: true, class: 'form-control'

      =f.label "#{t "rules.description"}"
      =f.text_area :description, class: 'form-control'
      %br
      .panel.panel-default
        .panel-heading
          %h4{class: "panel-title"}
            =t "rules.turn_off"
        .panel-body
          -9.times do |i|
            =check_box_tag "dead_#{i}"
            =label_tag "dead_#{i}", i
      .panel.panel-default
        .panel-heading
          %h4{class: "panel-title"}
            =t "rules.turn_on"
        .panel-body
          -9.times do |i|
            =check_box_tag "alive_#{i}"
            =label_tag "alive_#{i}", i
          %br
      =f.submit "#{t :add}", class: 'btn btn-default'
