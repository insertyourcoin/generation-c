.container
  %h2
    =t "devise.edit_user"
  .row
    -if devise_error_messages! != ""
      .alert.alert-danger
        %button{type: "button", class: "close", data: {dismiss: "alert"}, aria: {hidden: "true"}}
          &times;
        = devise_error_messages!

    -if devise_mapping.confirmable? && resource.pending_reconfirmation?
      .alert.alert-warning
        =t "devise.waiting_confirmation"
        = resource.unconfirmed_email
    .col-md-4
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|

        = f.label :email
        = f.email_field :email, class: 'form-control', rel: 'tooltip', data: {toggle: "tooltip", placement: "bottom", title: "#{t "devise.email_prompt"}"}

        = f.label t "devise.password"
        = f.password_field :password, autocomplete: "off", class: 'form-control', rel: 'tooltip', data: {toggle: "tooltip", placement: "top", title: "#{t "devise.password_blank_prompt"}"}

        = f.label t "devise.password_confirmation"
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', rel: 'tooltip', data: {toggle: "tooltip", placement: "top", title: "#{t "devise.password_blank_prompt"}"}

        = f.label t "devise.current_password"
        = f.password_field :current_password, autocomplete: "off", class: 'form-control', rel: 'tooltip', data: {toggle: "tooltip", placement: "top", title: "#{t "devise.current_password_prompt"}"}
        %br
        = f.submit "#{t "devise.update"}", class: 'btn btn-default'
    .col-md-3.pull-right
      %h3
        =t "devise.cancel_header"
      %p
        =t "devise.cancel_question"
        = button_to "#{t "devise.cancel_button"}", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'

  = link_to "#{t :back}", :back
